<%= form_with(model: [employer, opportunity], local: true) do |form| %>
  <% if opportunity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(opportunity.errors.count, "error") %> prohibited this opportunity from being saved:</h2>

      <ul>
      <% opportunity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :job_posting_url %>
    <%= form.text_field :job_posting_url %>
  </div>
  
  <h3>Tasks:</h3>
  <ul>
    <%= form.fields_for :tasks do |tasks_form| %>
      <li class="task_fields">
        <div class="field">
          <%= tasks_form.label :name %>
          <%= tasks_form.text_field :name %>
        </div>
        
        <div class="field">
          <%= tasks_form.label :due_at %>
          <%= tasks_form.text_field :due_at, class: "datetime" %><br>

          <%= tasks_form.hidden_field :_destroy, class: "task_remove_hidden" %>
          <%= link_to 'remove', '#', class: 'task_remove' %>
        </div>
      </li>
    <% end %>
  </ul>
  
  <%= render 'industries/check_boxes', object: opportunity %>
  
  <%= render 'interests/check_boxes', object: opportunity %>
  

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<script>
  $('.datetime').datepicker({dateFormat: 'yy-mm-dd'})
  
  $('.task_remove').click(function(event){
    event.preventDefault();
    $(this).closest('.task_fields').find('.task_remove_hidden').attr('value', '1');
    $(this).closest('.task_fields').hide();
  });
</script>