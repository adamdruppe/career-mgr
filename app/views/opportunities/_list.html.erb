<table>
  <thead>
    <tr>
      <th>Employer</th>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% opportunities.each do |opportunity| %>
      <tr>
        <td><%= opportunity.employer.name %>
        <td><%= link_to opportunity.name, employer_opportunity_path(opportunity.employer, opportunity) %></td>
        <td><%= opportunity.description %></td>
        <td><%= link_to 'Edit', edit_employer_opportunity_path(opportunity.employer, opportunity), class: 'edit' %></td>
        <td><%= link_to 'Delete', employer_opportunity_path(opportunity.employer, opportunity), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete' %></td>
      </tr>
    <% end %>
  </tbody>
</table>