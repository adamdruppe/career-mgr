<% if locations.empty? %>
  <p class="empty-list">There are no locations for this employer yet.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Employer</th>
        <th>Name</th>
        <th>Address</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% locations.each do |location| %>
        <tr>
          <td><%= location.employer.name %>
          <td><%= link_to location.name, location_path(location) %></td>
          <td><%= location.friendly_address %></td>
          <td><%= link_to 'Edit', edit_location_path(location), class: 'edit' %></td>
          <td><%= link_to 'Delete', location_path(location), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>