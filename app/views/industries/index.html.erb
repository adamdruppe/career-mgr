<p id="notice"><%= notice %></p>

<h1>Industries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @industries.each do |industry| %>
      <tr>
        <td><%= link_to industry.name, industry %></td>
        <td><%= industry.description %></td>
        <td><%= link_to 'Edit', edit_industry_path(industry), class: 'edit' %></td>
        <td><%= link_to 'Delete', industry, method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Industry', new_industry_path, class: 'button add' %>
