<% if courses.empty? %>
  <p class="empty-list">There are no courses for this site yet.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th><%= Site %></th>
        <th>Course</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% courses.order('year, semester desc').each do |course| %>
        <tr>
          <td><%= course.site.name %>
          <td><%= course.label %></td>
          <td><%= link_to 'Show', course_path(course), class: 'show' %></td>
          <td><%= link_to 'Edit', edit_course_path(course), class: 'edit' %></td>
          <td><%= link_to 'Delete', course_path(course), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>