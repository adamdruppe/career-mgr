<h1>Interests</h1>

<table>
  <tbody>
    <% @interests.each do |interest| %>
      <tr>
        <td><%= link_to interest.name, interest %></td>
        <td><%= link_to 'Edit', edit_interest_path(interest), class: 'edit' %></td>
        <td><%= link_to 'Delete', interest, method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Interest', new_interest_path, class: 'button add' %>
