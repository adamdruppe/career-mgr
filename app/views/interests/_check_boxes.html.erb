<% object_name = object.class.name.downcase %>  
<div class="interests checklist">
  <h3>Interests</h3>
  <% Interest.order('name asc').each do |interest| %>
    <% tag_id = "interest_ids_#{interest.id}" %>

    <%= check_box_tag("#{object_name}[interest_ids][]", interest.id, object.interests.include?(interest), id: tag_id) %>
    <%= label_tag(tag_id, interest.name, style: 'display: inline;') %><br>
  <% end %>
</div>
